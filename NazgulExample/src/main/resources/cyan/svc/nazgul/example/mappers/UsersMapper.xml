<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cyan.svc.nazgul.example.mappers.UsersMapper">

    <select id="findByUsername" resultType="cyan.svc.nazgul.example.entities.User">
        <![CDATA[
        select `name`, id
        from `user`
        where `name` = "#{name}"
        ]]>
    </select>

    <select id="findById" resultType="cyan.svc.nazgul.example.entities.User">
        <![CDATA[
        select `name`, id
        from `user`
        where id = "#{id}"
        ]]>
    </select>

    <resultMap id="User" type="cyan.svc.nazgul.example.entities.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <insert id="addUser">
        <![CDATA[
        insert into `user` (id, `name`)
        values ("#{user.id}", "#{user.`name`}")
        ]]>
    </insert>
</mapper>